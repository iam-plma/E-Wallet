<Window x:Class="EWalletWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EWalletWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600" MinHeight="450" MinWidth="600" FontSize="18">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="100" MaxHeight="150"></RowDefinition>
            <RowDefinition Height="3*" MinHeight="300"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Header-->
        <local:Header></local:Header>

        <!--Main Control-->
        <local:MainView Grid.Row="1"></local:MainView>
    </Grid>
</Window>
